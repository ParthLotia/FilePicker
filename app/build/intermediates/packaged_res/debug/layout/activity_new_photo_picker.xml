<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".NewPhotoPicker" android:tag="layout/activity_new_photo_picker_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <Button
            android:id="@+id/btn_upload_pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Upload Document" />

        <Button
            android:id="@+id/btn_upload_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Camera" />

        <ImageView
            android:id="@+id/img_pick"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center" />


    </LinearLayout>
         